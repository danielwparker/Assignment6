@{}


@model Book

    <div class="grid-item">
        <h5>@Model.Title</h5>
        <p>Author: @Model.AuthorFName @Model.AuthorLName</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classification/Category: @Model.Classification, @Model.Category</p>
        <p>Page Count: @Model.PageNumber</p>
        <p>$@Model.Price</p>

        <!--Everything below is for the purchase button-->
        <form id="@Model.BookId" asp-page="/Purchase" method="post">
            <input type="hidden" asp-for="BookId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Purchase
                </button>
            </span>
        </form>
    </div>

